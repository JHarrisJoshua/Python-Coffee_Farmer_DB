{% extends "layout.j2" %}

{% block main %}
<div id="browse" style="display: block">

  <nav class="navbar">
    <h2><strong>Browse Varieties</strong></h2>
    <a href="/varieties/add" class="btn btn-success">Add Variety</a>
  </nav>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Rust Resistance</th>
        <th>Nematode Resistance</th>
        <th>Optimal Altitude</th>
        <th>Optimal Rainfall</th>
        <th>Optimal Temperature</th>
        <th>Organization</th>
        <th>Type</th>
        <th></th>
        <th></th>
      </tr>

    <tbody>
      {% for variety in varieties %}
      <tr>
        {% for key in variety.keys() %}
        <td>{{variety[key]}}</td>
        {% endfor %}
        <td><a href="/varieties/edit/{{variety.plant_id}}" class="btn btn-outline-success">Edit</a></td>
        <td>
          <a href="/varieties/delete/{{variety.plant_id}}" class="btn btn-outline-success"
            onClick="return confirm('Are you sure you want to delete?' );">Delete</a>
        </td>
      </tr>
      {% endfor %}
  </table>

  <p>&nbsp;</p>
</div>

{% endblock %}